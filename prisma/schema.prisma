generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comments {
  id        Int      @id @default(autoincrement())
  content   String
  userId    String   // UUID dari user yang mengomentari
  messageId String   // UUID dari menfess/message
  createdAt DateTime @default(now())

  @@map("comments")
}