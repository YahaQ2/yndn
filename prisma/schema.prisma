generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Sesuaikan dengan database Supabase (PostgreSQL)
  url      = env("DATABASE_URL") // Tambahkan URL database Supabase di .env
}

model Message {
  id          Int       @id @default(autoincrement())
  sender      String
  recipient   String
  message     String
  track       String?   // Spotify embed link (opsional)
  createdAt   DateTime  @default(now())
  comments    Comment[] // Relasi one-to-many dengan tabel comments
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  message   Message   @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId Int
  createdAt DateTime  @default(now())
}